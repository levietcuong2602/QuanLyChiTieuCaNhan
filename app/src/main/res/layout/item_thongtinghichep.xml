<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <ImageView
        android:layout_marginLeft="10dp"
        android:id="@+id/ImageView"
        android:src="@drawable/ic_action_account"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    
    <TextView
        android:id="@+id/tvLoaiGhiChep"
        android:layout_marginLeft="20dp"
        android:text="Chi:"
        android:textColor="@color/colorBlack"
        android:layout_toRightOf="@+id/ImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvTenHangMuc"
        android:textColor="@color/colorBlack"
        android:layout_toRightOf="@+id/tvLoaiGhiChep"
        android:text="Học hành"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvSoTienGhiChep"
        android:layout_marginRight="10dp"
        android:text="100.000"
        android:textColor="@color/colorBlack"
        android:layout_toLeftOf="@+id/tvD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvD"
        android:textColor="@color/colorBlack"
        android:layout_alignParentRight="true"
        android:text="Đ"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvNgayGhiChep"
        android:layout_alignStart="@+id/tvLoaiGhiChep"
        android:layout_below="@+id/tvLoaiGhiChep"
        android:text="07/04/2018"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvLoaiGhiChep" />

    <TextView
        android:textColor="@color/colorBlack"
        android:layout_alignEnd="@+id/tvD"
        android:layout_below="@+id/tvSoTienGhiChep"
        android:text="Đ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tvSoTienGhiChep" />

    <TextView
        android:id="@+id/tvSoTienConLai"
        android:layout_alignEnd="@+id/tvSoTienGhiChep"
        android:layout_below="@+id/tvSoTienGhiChep"
        android:textColor="@color/colorBlack"
        android:text="6.100.000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tvSoTienGhiChep" />

    <TextView
        android:layout_marginRight="10dp"
        android:textColor="@color/colorBlack"
        android:layout_below="@+id/tvSoTienGhiChep"
        android:layout_toLeftOf="@+id/tvSoTienConLai"
        android:text="Còn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>