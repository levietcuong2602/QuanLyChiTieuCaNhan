<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <ImageView
        android:layout_margin="10dp"
        android:id="@+id/ImageView"
        android:src="@drawable/ic_action_account"
        android:layout_width="30dp"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/tvLoaiGhiChep"
        android:layout_margin="5dp"
        android:text="Chi:"
        android:textColor="@color/colorBlack"
        android:layout_toRightOf="@+id/ImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/ten_hang_muc"
        android:textColor="@color/colorBlack"
        android:layout_toRightOf="@+id/tvLoaiGhiChep"
        android:text="Học hành"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/so_tien_ghi_chep"
        android:layout_margin="5dp"
        android:text="100.000"
        android:textColor="@color/colorBlack"
        android:layout_toLeftOf="@+id/tvD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvD"
        android:textColor="@color/colorBlack"
        android:layout_alignParentRight="true"
        android:text="Đ"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvNgayGhiChep"
        android:layout_alignStart="@+id/tvLoaiGhiChep"
        android:layout_below="@+id/tvLoaiGhiChep"
        android:text="07/04/2018"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvLoaiGhiChep" />

    <TextView
        android:textColor="@color/colorBlack"
        android:layout_alignEnd="@+id/tvD"
        android:layout_below="@+id/so_tien_ghi_chep"
        android:text="Đ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/so_tien_ghi_chep" />

    <TextView
        android:id="@+id/so_tien_con_lai"
        android:layout_alignEnd="@+id/so_tien_ghi_chep"
        android:layout_below="@+id/so_tien_ghi_chep"
        android:textColor="@color/colorBlack"
        android:text="6.100.000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/so_tien_ghi_chep" />

    <TextView
        android:layout_marginRight="10dp"
        android:textColor="@color/colorBlack"
        android:layout_below="@+id/so_tien_ghi_chep"
        android:layout_toLeftOf="@+id/so_tien_con_lai"
        android:text="Còn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>