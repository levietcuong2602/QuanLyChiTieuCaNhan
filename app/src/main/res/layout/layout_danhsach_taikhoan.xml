<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorWhite">
    <ListView
        android:id="@+id/listViTien"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/content_bottom_tongtien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>
    <RelativeLayout
        android:id="@+id/content_bottom_tongtien"
        android:background="@color/colorGray"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:textSize="20sp"
            android:layout_gravity="center"
            android:id="@+id/textView1"
            android:text="Tổng còn:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/textViewTong"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/textView1"
            android:text="1.500.000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/textView2"
            android:textSize="20sp"
            android:layout_toRightOf="@id/textViewTong"
            android:text="Đ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
</RelativeLayout>