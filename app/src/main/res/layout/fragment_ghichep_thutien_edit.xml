<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edt_sotien_5"
            android:hint="Nhập số tiền"
            android:background="@drawable/custom_rounded_edittext"
            android:layout_weight="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"  />
        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/bgToolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đồng"
            android:textSize="25sp"  />
    </LinearLayout>

    <LinearLayout
        android:layout_marginVertical="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mục thu"/>

        <TextView
            android:id="@+id/tv_mucthu_5"
            android:text="Mục thu"
            android:textSize="25sp"
            android:layout_weight="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/bgLogo" />

        <Button
            android:id="@+id/btn_mucthu_5"
            android:text="Mục thu >"
            android:textColor="@color/colorWhite"
            android:background="@color/bgToolbar"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <EditText
        android:id="@+id/edt_diengiai_5"
        android:background="@drawable/custom_rounded_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Diễn giải"  />

    <LinearLayout
        android:layout_marginVertical="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vào tài khoản:" />

        <TextView
            android:id="@+id/tv_vaotaikhoan_5"
            android:textSize="25sp"
            android:layout_weight="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="abcxyz"
            android:textColor="@color/bgToolbar" />

        <Button
            android:id="@+id/btn_vaotaikhoan_5"
            android:text="Vào tài khoản >"
            android:textColor="@color/colorWhite"
            android:background="@color/bgToolbar"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"  />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày thu:" />

        <TextView
            android:id="@+id/tv_ngay_5"
            android:layout_weight="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dd/mm/yyyy"
            android:textColor="@color/bgToolbar" />

        <Button
            android:id="@+id/btn_ngay_5"
            android:textColor="@color/colorWhite"
            android:background="@color/bgToolbar"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày"  />

    </LinearLayout>

    <EditText
        android:id="@+id/edt_thu_tu_ai_5"
        android:hint="Thu từ ai.."
        android:background="@drawable/custom_rounded_edittext"
        android:layout_marginVertical="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_capnhat_5"
            android:layout_marginRight="5dp"
            android:textColor="@color/colorWhite"
            android:background="@color/bgToolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Cập nhật" />

        <Button
            android:id="@+id/btn_xoa_5"
            android:textColor="@color/colorWhite"
            android:background="@color/bgToolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Xoá" />
    </LinearLayout>

</LinearLayout>