<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_back_2"
        android:text="back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:background="@color/colorGray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CHI"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/lv_thongke_chi"
            android:layout_width="match_parent"
            android:layout_height="200dp"></ListView>

        <TextView
            android:id="@+id/tv_tongchi"
            android:text="Tổng chi: "
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_marginTop="8dp"
            android:background="@color/colorGray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="THU"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/lv_thongke_thu"
            android:layout_width="match_parent"
            android:layout_height="200dp"></ListView>

        <TextView
            android:id="@+id/tv_tongthu"
            android:text="Tổng thu: "
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>



</LinearLayout>