<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <ImageView
        android:id="@+id/iconViTien"
        android:src="@drawable/wallet"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/textViewTenViTien"
        android:text="Ví 1"
        android:textColor="@color/colorBlack"
        android:gravity="left"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/iconViTien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/idCon"
        android:layout_below="@+id/textViewTenViTien"
        android:layout_toRightOf="@+id/iconViTien"
        android:text="Còn"
        android:textColor="@color/colorBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/textViewSoTien"
        android:text="500.000"
        android:textColor="@color/colorBlack"
        android:gravity="left"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/idCon"
        android:layout_below="@+id/textViewTenViTien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="@color/colorBlack"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/textViewTenViTien"
        android:layout_toRightOf="@+id/textViewSoTien"
        android:text="đ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>