<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edt_sotien"
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:hint="Nhập số tiền"
            android:inputType="number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đồng"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mục chi" />

        <TextView
            android:layout_weight="4"
            android:id="@+id/tv_muchi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="abcxyz"
            android:textColor="#FF0000" />

        <Button
            android:layout_weight="1"
            android:id="@+id/btn_mucchi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mục chi >"
            android:textSize="15sp" />

    </LinearLayout>

    <EditText
        android:id="@+id/edt_diengiai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Diễn giải" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Từ tài khoản:" />

        <TextView
            android:layout_weight="4"
            android:id="@+id/tv_tutaikhoan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="abcxyz"
            android:textColor="#FF0000" />

        <Button
            android:layout_weight="1"
            android:id="@+id/btn_tutaikhoan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Từ tài khoản >"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày chi:" />

        <TextView
            android:layout_weight="4"
            android:id="@+id/tv_ngay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="dd/mm/yyyy"
            android:textColor="#FF0000" />

        <Button
            android:layout_weight="1"
            android:id="@+id/btn_ngay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:text="Ngày" />

    </LinearLayout>

    <EditText
        android:id="@+id/edt_chi_cho_ai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Chi cho ai.." />

    <EditText
        android:id="@+id/edt_sukien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Sự kiện..." />

    <Button
        android:id="@+id/btn_ghi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="GHI" />

</LinearLayout>