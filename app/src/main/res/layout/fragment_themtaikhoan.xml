<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
>

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/bgToolbar">

        <Button
            android:id="@+id/btnHuyLuuTaiKhoan"
            android:drawableLeft="@drawable/ic_action_left"
            android:background="@color/bgToolbar"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:text="Thêm tài khoản"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnSaveTaiKhoan_tb"
            android:layout_gravity="right"
            android:textColor="@color/colorWhite"
            android:text="Lưu"
            android:background="@color/bgToolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </android.support.v7.widget.Toolbar>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <TableRow
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_multitext_top"
            android:padding="3dp"
            >

            <TextView
                android:textColor="@color/colorBlack"
                android:gravity="left"
                android:text="Tên ví tiền"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

            <EditText
                android:id="@+id/edTenViTien"
                android:hint="Tên tài khoản"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/custom_edittext"
                android:gravity="center"
                />

        </TableRow>

        <TableRow
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_multitext_bottom"
            >

            <TextView
                android:textColor="@color/colorBlack"
                android:gravity="left|center"
                android:text="Thuộc loại"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

            <Button
                android:gravity="center"
                android:text="Tiền mặt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/custom_button_right"
                />

        </TableRow>

        <TableRow
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_multitext_bottom"
            >

            <TextView
                android:textColor="@color/colorBlack"
                android:gravity="left"
                android:text="Loại tiền tệ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

            <Button
                android:gravity="center"
                android:text="VNĐ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/custom_button_right"
                android:drawableRight="@drawable/ic_action_right"
                />

        </TableRow>

        <TableRow android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            >

            <EditText
                android:id="@+id/edSoDu"
                android:gravity="center"
                android:textSize="22sp"
                android:hint="Số dư trong ban đầu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/custom_rounded_edittext"
                android:padding="5dp"
                >

            </EditText>

        </TableRow>


        <TableRow android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_multitext_top">
            <Button
                android:id="@+id/btnGhiChu"
                android:background="@drawable/custom_button_right"
                android:text="Ghi chú"
                android:padding="10dp"
                android:gravity="left|center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <Button
                android:id="@+id/btnNoiDungGhiChu"
                android:background="@drawable/custom_button_right"
                android:drawableRight="@drawable/ic_action_right"/>
        </TableRow>

        <TableRow
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnLuuTaiKhoan"
                android:background="@color/bgToolbar"
                android:layout_weight="1"
                android:text="Lưu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </TableRow>

    </TableLayout>


</LinearLayout>