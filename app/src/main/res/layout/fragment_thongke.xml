<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableRow
        android:background="@color/bgToolbar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
        android:id="@+id/btn_back_2"
        android:background="@drawable/ic_action_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:gravity="center"
            android:text="Thống kê hạng mục"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />

    </TableRow>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:paddingLeft="8dp"
            android:background="@color/colorGray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CHI"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/lv_thongke_chi"
            android:layout_width="match_parent"
            android:layout_height="195dp"></ListView>

        <TextView
            android:id="@+id/tv_tongchi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:text="Tổng chi: "
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:paddingLeft="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorGray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="THU"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/lv_thongke_thu"
            android:layout_width="match_parent"
            android:layout_height="195dp"></ListView>

        <TextView
            android:paddingLeft="8dp"
            android:id="@+id/tv_tongthu"
            android:textColor="@color/bgToolbar"
            android:text="Tổng thu: "
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>



</LinearLayout>