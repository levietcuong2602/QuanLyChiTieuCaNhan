<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorGray">

    <android.support.v7.widget.Toolbar
        android:background="@color/bgToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="center"
            android:textColor="@color/colorWhite"
            android:text="Thay đổi ảnh đại diện"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/imgPerson"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:src="@drawable/man" />

    <ImageView
        android:id="@+id/imgCamera"
        android:src="@drawable/photo_camera"
        android:layout_alignBottom="@+id/imgPerson"
        android:layout_alignRight="@+id/imgPerson"
        android:layout_alignEnd="@+id/imgPerson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvTaiKhoan"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:text="vietcuong"
        android:layout_below="@+id/imgPerson"
        android:layout_alignEnd="@+id/imgPerson"
        android:layout_alignRight="@+id/imgPerson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:text="Tài khoản: "
        android:layout_below="@+id/imgPerson"
        android:layout_toLeftOf="@+id/tvTaiKhoan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvHoTen"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:text="Viêt Cường"
        android:layout_below="@+id/tvTaiKhoan"
        android:layout_alignStart="@id/tvTaiKhoan"
        android:layout_alignLeft="@id/tvTaiKhoan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:text="Họ tên: "
        android:layout_below="@+id/tvTaiKhoan"
        android:layout_toLeftOf="@+id/tvHoTen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>