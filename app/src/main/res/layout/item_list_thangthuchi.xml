<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/img_thang"
            style="@style/thoigian" />

        <TextView
            android:id="@+id/tv_thang"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/img_thang"
            android:text="Tháng (mm/yyyy)"
            style="@style/tv1" />
        <TextView
            android:id="@+id/tv_thu_2"
            android:textColor="@color/bgToolbar"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tv_thang"
            android:layout_toRightOf="@+id/img_thang"
            android:text="Thu: "
            style="@style/tv1" />

        <TextView
            style="@style/tv1"
            android:layout_marginTop="60dp"
            android:layout_toRightOf="@+id/img_thang"
            android:text="Chi: "
            android:textColor="@android:color/holo_orange_dark" />

        <TextView
            android:id="@+id/tv_thu_thang"
            android:textColor="@color/bgToolbar"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tv_thang"
            android:text="0 đ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_chi_thang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="60dp"
            android:text="0 đ"
            android:textColor="@android:color/holo_orange_dark" />

        <TextView
            android:id="@+id/tv_thuchi_thang"
            android:layout_alignParentRight="true"
            android:layout_marginTop="90dp"
            android:text="0 đ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="90dp"
            android:text="Thu - Chi = "
            android:layout_toLeftOf="@+id/tv_thuchi_thang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</LinearLayout>