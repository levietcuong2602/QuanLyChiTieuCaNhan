<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@color/colorGray"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableRow
        android:padding="8dp"
        android:background="@drawable/custom_multitext_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edt_sotien_4"
            android:hint="Nhập số tiền"
            android:layout_weight="5"
            android:background="@drawable/custom_edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"/>

        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/bgToolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đồng"
            android:textSize="20sp"/>
    </TableRow>

    <TableRow
        android:layout_marginBottom="16dp"
        android:background="@drawable/custom_multitext_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textSize="20sp"
            android:paddingLeft="8dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mục chi:" />

        <TextView
            android:id="@+id/tv_mucchi_4"
            android:text="Mục chi"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_weight="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/bgToolbar"/>

        <Button
            android:id="@+id/btn_mucchi_4"
            android:drawableRight="@drawable/ic_action_right"
            android:background="@drawable/custom_button_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </TableRow>

    <TableRow
        android:padding="8dp"
        android:background="@drawable/custom_multitext_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edt_diengiai_4"
            android:background="@drawable/custom_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Diễn giải"  />
    </TableRow>

    <TableRow
        android:background="@drawable/custom_multitext_top"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Từ tài khoản:"
            android:paddingLeft="8dp"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_tutaikhoan_4"
            android:textSize="20sp"
            android:layout_weight="4"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="abcxyz"
            android:textColor="@color/bgToolbar"   />

        <Button
            android:id="@+id/btn_tutaikhoan_4"
            android:drawableRight="@drawable/ic_action_right"
            android:background="@drawable/custom_button_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </TableRow>

    <TableRow
        android:background="@drawable/custom_multitext_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Ngày chi:"
            android:paddingLeft="8dp"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_ngay_4"
            android:layout_weight="4"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dd/mm/yyyy"
            android:textSize="20sp"
            android:textColor="@color/bgToolbar" />

        <Button
            android:id="@+id/btn_ngay_4"
            android:drawableRight="@drawable/ic_action_right"
            android:background="@drawable/custom_button_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </TableRow>

    <TableRow
        android:padding="8dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/custom_multitext_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edt_chi_cho_ai_4"
            android:background="@drawable/custom_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Chi cho ai.." />

    </TableRow>



    <TableRow
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_capnhat_4"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:textColor="@color/colorWhite"
            android:background="@color/bgToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Cập nhật" />
        <Button
            android:id="@+id/btn_xoa_4"
            android:layout_weight="1"
            android:textColor="@color/colorWhite"
            android:background="@color/colorRed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Xoá" />
    </TableRow>

</LinearLayout>