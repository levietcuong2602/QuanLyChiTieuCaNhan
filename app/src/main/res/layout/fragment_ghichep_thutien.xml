<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edt_sotien_2"
            android:inputType="number"
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:hint="Nhập số tiền" />
        <TextView
            android:textSize="25sp"
            android:text="Đồng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mục thu" />

        <TextView
            android:layout_weight="4"
            android:layout_marginLeft="50dp"
            android:id="@+id/tv_mucthu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="abcxyz"
            android:textColor="#FF0000" />

        <Button
            android:layout_weight="1"
            android:id="@+id/btn_mucthu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:text="Mục thu >"
            android:textSize="15sp" />

    </LinearLayout>
    <EditText
        android:id="@+id/edt_diengiai_2"
        android:hint="Diễn giải"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vào tài khoản:" />

        <TextView
            android:layout_weight="4"
            android:layout_marginLeft="50dp"
            android:id="@+id/tv_vaotaikhoan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="abcxyz"
            android:textColor="#FF0000" />

        <Button
            android:layout_weight="1"
            android:id="@+id/btn_vaotaikhoan"
            android:text="Vào tài khoản >"
            android:layout_marginLeft="30dp"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày thu:" />

        <TextView
            android:layout_weight="4"
            android:layout_marginLeft="30dp"
            android:id="@+id/tv_ngay_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dd/mm/yyyy"
            android:textColor="#FF0000" />

        <Button
            android:layout_weight="1"
            android:layout_marginLeft="100dp"
            android:id="@+id/btn_ngay_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dp"
            android:text="Ngày" />

    </LinearLayout>
    <EditText
        android:id="@+id/edt_thu_tu_ai"
        android:hint="Thu từ ai.."
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/edt_sukien_2"
        android:hint="Sự kiện"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_ghi_2"
        android:layout_gravity="center"
        android:text="GHI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>