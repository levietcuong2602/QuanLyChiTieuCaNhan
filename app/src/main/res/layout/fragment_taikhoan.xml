<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp">

    <TableLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TableRow
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:textSize="22sp"
                android:gravity="left"
                android:text="Tên ví tiền"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

            <EditText
                android:hint="Tên tài khoản"
                android:id="@+id/edTenViTien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

        </TableRow>

        <TableRow
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:textSize="22sp"
                android:gravity="left"
                android:text="Thuộc loại"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

            <TextView
                android:layout_marginTop="10dp"
                android:textSize="22sp"
                android:gravity="center"
                android:text="Tiền mặt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

        </TableRow>

        <TableRow
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:textSize="22sp"
                android:gravity="left"
                android:text="Loại tiền tệ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

            <TextView
                android:textSize="22sp"
                android:gravity="center"
                android:text="VNĐ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

        </TableRow>

    </TableLayout>

    <EditText
        android:gravity="center"
        android:textSize="22sp"
        android:hint="Số dư trong ban đầu"
        android:layout_marginTop="20dp"
        android:id="@+id/edSoDu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    </EditText>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <Button
            android:padding="10dp"
            android:layout_marginTop="50dp"
            android:drawableLeft="@drawable/ic_action_limitbuy"
            android:background="@color/bgLogo"
            android:text="Lưu"
            android:id="@+id/btnLuwViTien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="10dp"/>

        <Button
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:drawableLeft="@drawable/ic_action_cancel"
            android:background="@color/bgLogo"
            android:text="Hủy"
            android:id="@+id/btnHuyLuuViTien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </TableRow>



</LinearLayout>